<div class="nl-popup" data-nl-popup hidden>
  <div class="nl-card">
    <button class="nl-close" data-nl-close aria-label="{{ 'accessibility.close' | t }}">Ã—</button>
    <h3>{{ section.settings.heading }}</h3>
    <p>{{ section.settings.text }}</p>
    <form method="post" action="/contact#newsletter">
      <input type="hidden" name="form_type" value="customer">
      <input type="email" name="contact[email]" placeholder="you@example.com" required>
      <button class="btn btn--primary">{{ 'newsletter.subscribe' | t }}</button>
    </form>
  </div>
</div>
{% schema %}{ "name":"Newsletter popup","settings":[
  { "type":"text","id":"heading","label":"Heading","default":"Blijf op de hoogte" },
  { "type":"textarea","id":"text","label":"Text","default":"Ontvang updates over nieuwe collecties en exclusieve aanbiedingen." },
  { "type":"checkbox","id":"enabled","label":"Enable popup","default":true }
]}{% endschema %}
