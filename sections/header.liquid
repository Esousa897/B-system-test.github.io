<header class="site-header" role="banner">
  <div class="container header-row">
    <button class="nav-toggle" aria-expanded="false" aria-controls="site-nav">â˜° <span class="sr-only">Menu</span></button>
    <a class="logo" href="{{ routes.root_url }}">{{ settings.logo_text | default: 'BOLDYASE' }}</a>
    <nav id="site-nav" class="nav" role="navigation" aria-expanded="false">
      <ul>
        {% for link in linklists[section.settings.menu].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>
    <div class="header-actions">
      <a href="{{ routes.search_url }}" data-open-search aria-label="{{ 'general.search.search' | t }}">ðŸ”Ž</a>
      <a href="{{ routes.cart_url }}" data-open-cart aria-label="{{ 'sections.header.cart' | t }}">ðŸ›’ <span data-cart-count>{{ cart.item_count }}</span></a>
    </div>
  </div>
</header>
{% schema %}
{ "name":"Header", "settings":[
  { "type":"text","id":"logo_text","label":"Logo text","default":"BOLDYASE" },
  { "type":"link_list","id":"menu","label":"Main menu","default":"main-menu" },
  { "type":"checkbox","id":"sticky","label":"Sticky header","default": true }
]}
{% endschema %}
