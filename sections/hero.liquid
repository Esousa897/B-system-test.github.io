          "label": "Achtergrond afbeelding"
        },
        {
          "type": "image_picker",
          "id": "background_image_mobile",
          "label": "Mobiele achtergrond afbeelding"
        },
        {
          "type": "video",
          "id": "background_video",
          "label": "Achtergrond video"
        },
