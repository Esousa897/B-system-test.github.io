<section class="look-grid container">
  <h2 class="section-title">{{ section.settings.title }}</h2>
  <div class="grid">
    {% for block in section.blocks %}
      <article class="look-card">
        {% if block.settings.image %}
          <div class="look-img"><img src="{{ block.settings.image | image_url: width: 800 }}" alt=""></div>
        {% else %}
          <div class="look-img look-img--placeholder"></div>
        {% endif %}
        <div class="look-meta">
          <p class="look-cat">{{ block.settings.category }}</p>
          <h3 class="look-title">{{ block.settings.title }}</h3>
          <a href="{{ block.settings.link | default: '#' }}" class="btn">Shop de Look</a>
        </div>
      </article>
    {% endfor %}
  </div>
</section>
{% schema %}
{
  "name":"Look grid",
  "settings":[{ "type":"text","id":"title","label":"Title","default":"Shop de Look" }],
  "blocks":[
    { "type":"look","name":"Look","settings":[
      { "type":"image_picker","id":"image","label":"Image" },
      { "type":"text","id":"title","label":"Title","default":"TON SUR TON" },
      { "type":"text","id":"category","label":"Category","default":"MONOCHROME ELEGANTIE" },
      { "type":"url","id":"link","label":"Link" }
    ]}
  ],
  "max_blocks": 8,
  "presets":[{ "name":"Look grid" }]
}
{% endschema %}
