<div class="product-card">
  <a href="{{ product.url | within: collection }}" class="product-media">
    {% if product.featured_image %}
      <img src="{{ product.featured_image | img_url: '600x600' }}" alt="{{ product.title }}"/>
    {% else %}
      <div style="height:220px;background:#f3f4f6;display:flex;align-items:center;justify-content:center">No image</div>
    {% endif %}
  </a>
  <div class="info">
    <div style="display:flex;justify-content:space-between;align-items:center">
      <strong>{{ product.title }}</strong>
      <span class="price">{{ product.price | money }}</span>
    </div>
    <p style="margin:0;color:#6b7280">{{ product.vendor }}</p>
    <div style="margin-top:auto">
      <button class="btn btn-add-to-cart">Add to cart</button>
    </div>
  </div>
</div>
