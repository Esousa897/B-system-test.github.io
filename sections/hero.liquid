<section class="hero section" id="hero-{{ section.id }}">
  <div class="container">
    <h1>{{ section.settings.title }}</h1>
    <p>{{ section.settings.subtext }}</p>
    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_label }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Modern E-commerce Experience" },
    { "type": "text", "id": "subtext", "label": "Subtext", "default": "Discover amazing products with our sleek store." },
    { "type": "text", "id": "button_label", "label": "Button label", "default": "Shop Now" },
    { "type": "url", "id": "button_link", "label": "Button link", "default": "/collections/all" }
  ],
  "blocks": [],
  "preset": { "name": "Hero Section" }
}
{% endschema %}
