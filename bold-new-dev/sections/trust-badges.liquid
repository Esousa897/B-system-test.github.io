<section class="container trust">
  <ul class="badges">
    {% for block in section.blocks %}
      <li class="badge"><strong>{{ block.settings.title }}</strong><span class="muted">{{ block.settings.text }}</span></li>
    {% endfor %}
  </ul>
</section>
{% schema %}
{
  "name":"Trust badges",
  "blocks":[ { "type":"badge","name":"Badge","settings":[
    {"type":"text","id":"title","label":"Title","default":"Veilig betalen"},
    {"type":"text","id":"text","label":"Text","default":"SSL + PCI DSS"}
  ]} ],
  "presets":[{"name":"Trust badges","blocks":[{"type":"badge"},{"type":"badge"},{"type":"badge"}]}]
}
{% endschema %}
