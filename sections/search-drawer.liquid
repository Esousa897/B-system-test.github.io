<div id="search-overlay" class="search-overlay" aria-hidden="true">
  <div class="search-panel" role="dialog" aria-modal="true">
    <div class="header">
      <input id="search-input" type="search" placeholder="Search products..." aria-label="Search">
      <button data-close-search class="btn" aria-label="Close">Close</button>
    </div>
    <div class="p-4">
      <p class="muted">Type and press Enter to search. Example: blazer zwart</p>
      <div id="search-suggestions"></div>
    </div>
  </div>
</div>

