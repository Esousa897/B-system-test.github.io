<section class="hero">
  <div class="container">
    <h1>{{ section.settings.title }}</h1>
    <p>{{ section.settings.subtitle }}</p>
    <div class="hero__actions">
      <a class="btn btn--primary" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
      <a class="btn" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label }}</a>
    </div>
  </div>
</section>
{% schema %}
{ "name":"Hero","settings":[
  { "type":"text","id":"title","label":"Title","default":"BOLDYASE RESORT COLLECTION" },
  { "type":"textarea","id":"subtitle","label":"Subtitle","default":"Luxe basis, klaar voor content." },
  { "type":"url","id":"primary_link","label":"Primary link" },
  { "type":"text","id":"primary_label","label":"Primary label","default":"Shop Collectie" },
  { "type":"url","id":"secondary_link","label":"Secondary link" },
  { "type":"text","id":"secondary_label","label":"Secondary label","default":"Bekijk Lookbook" }
]}{% endschema %}
{% comment %} Geavanceerde Hero met parallax, video backgrounds, en interactieve elementen {% endcomment %}
<section class="hero-section" 
         data-hero 
         data-parallax="{{ section.settings.enable_parallax }}"
         data-autoplay="{{ section.settings.autoplay_slides }}">
  
  <div class="hero-container">
    {% if section.blocks.size > 1 %}
      <!-- Multi-slide Hero -->
      <div class="hero-slider" data-hero-slider>
        <div class="hero-slides" data-hero-slides>
          {% for block in section.blocks %}
            <div class="hero-slide" 
                 data-slide="{{ forloop.index0 }}"
                 data-bg-type="{{ block.settings.background_type }}"
                 {{ block.shopify_attributes }}>
              
              {% render 'hero-slide-content', block: block, section: section %}
            </div>
          {% endfor %}
        </div>

        <!-- Slider Controls -->
        {% if section.blocks.size > 1 %}
          <div class="hero-controls">
            <button class="hero-nav hero-prev" data-hero-prev aria-label="Vorige slide">
              <svg width="24" height="24" viewBox="0 0 24 24">
                <polyline points="15,18 9,12 15,6" fill="none" stroke="currentColor" stroke-width="2"/>
              </svg>
            </button>
            <button class="hero-nav hero-next" data-hero-next aria-label="Volgende slide">
              <svg width="24" height="24" viewBox="0 0 24 24">
                <polyline points="9,18 15,12 9,6" fill="none" stroke="currentColor" stroke-width="2"/>
              </svg>
            </button>
          </div>

          <!-- Slide Indicators -->
          <div class="hero-indicators" data-hero-indicators>
            {% for block in section.blocks %}
              <button class="hero-indicator {% if forloop.first %}active{% endif %}" 
                      data-slide-to="{{ forloop.index0 }}"
                      aria-label="Ga naar slide {{ forloop.index }}"></button>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% else %}
      <!-- Single Hero -->
      {% for block in section.blocks %}
        <div class="hero-single" {{ block.shopify_attributes }}>
          {% render 'hero-slide-content', block: block, section: section %}
        </div>
      {% endfor %}
    {% endif %}

    <!-- Scroll Indicator -->
    {% if section.settings.show_scroll_indicator %}
      <div class="scroll-indicator" data-scroll-indicator>
        <div class="scroll-text">Scroll</div>
        <div class="scroll-arrow">
          <svg width="16" height="24" viewBox="0 0 16 24">
            <path d="M8 0v22M1 15l7 7 7-7" fill="none" stroke="currentColor" stroke-width="1.5"/>
          </svg>
        </div>
      </div>
    {% endif %}
  </div>

  <!-- Background Elements -->
  <div class="hero-background-elements">
    {% if section.settings.show_floating_elements %}
      <div class="floating-element floating-element--1"></div>
      <div class="floating-element floating-element--2"></div>
      <div class="floating-element floating-element--3"></div>
    {% endif %}
  </div>
</section>

{% schema %}
{
