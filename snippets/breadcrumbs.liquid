<nav class="breadcrumbs" aria-label="Breadcrumb">
  <ol>
    <li><a href="{{ routes.root_url }}">Home</a></li>
    {% for part in request.path | split: '/' %}
      {% if part != blank and forloop.last == false %}
        <li><span aria-hidden="true">/</span> <span>{{ part | capitalize }}</span></li>
      {% endif %}
    {% endfor %}
  </ol>
</nav>
