<div class="drawer" data-cart-drawer hidden>
  <div class="drawer__overlay" data-drawer-overlay></div>
  <aside class="drawer__panel" role="dialog" aria-label="Cart">
    <header class="drawer__header">
      <h3>{{ 'sections.cart.title' | t }}</h3>
      <button class="drawer__close" data-drawer-close aria-label="{{ 'accessibility.close' | t }}">×</button>
    </header>
    <div class="drawer__body">
      <p class="empty" data-cart-empty hidden>{{ 'sections.cart.empty' | t }}</p>
      <ul class="cart-items" data-cart-items></ul>
    </div>
    <footer class="drawer__footer">
      <div class="cart-total"><span>{{ 'sections.cart.total' | t }}</span> <strong data-cart-total>€0,00</strong></div>
      <a href="{{ routes.cart_url }}" class="btn btn--primary w-full">{{ 'sections.cart.go_to_cart' | t }}</a>
    </footer>
  </aside>
</div>
{% schema %}{ "name":"Cart drawer","settings":[] }{% endschema %}
