{% comment %} Simple header section for BOLDYASE {% endcomment %}
<header class="header">
  <div class="container header-inner">
    <a href="/" class="logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}" style="height:36px;object-fit:contain">
      {% else %}
        BOLDYASE
      {% endif %}
    </a>

    {% if section.settings.menu != blank %}
      <nav aria-label="Main navigation">
        <ul class="nav">
          {% for link in linklists[section.settings.menu].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </nav>
    {% endif %}

    <div style="display:flex;gap:12px;align-items:center">
      <button data-open-search class="btn" aria-expanded="false">üîç</button>
      <a href="/cart" class="btn" style="background:#111827">Cart <span class="cart-count" style="margin-left:8px">0</span></a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo" },
    { "type": "link_list", "id": "menu", "label": "Main menu" }
  ],
  "blocks": [],
  "preset": { "name": "Header" }
}
{% endschema %}
