<section class="container product">
  <div class="product__grid">
    <div class="product__media">
      {% for media in product.media %}
        {% if media.media_type == 'image' %}
          <img loading="lazy" src="{{ media | image_url: width: 1200 }}" alt="{{ media.alt | escape }}" />
        {% endif %}
      {% endfor %}
    </div>
    <div class="product__info">
      <h1>{{ product.title }}</h1>
      <div class="price">{% render 'price', product: product %}</div>
      <form method="post" action="/cart/add">
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        <button type="submit" class="btn btn--primary" {% unless product.available %}disabled{% endunless %}>
          {{ 'products.product.add_to_cart' | t }}
        </button>
      </form>
      <div class="rte">{{ product.description }}</div>
      {% render 'social-share', product: product %}
    </div>
  </div>
</section>
{% schema %}{ "name":"Main product","settings": [] }{% endschema %}
